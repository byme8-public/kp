using kp.Views.Core.Entities;
using kp.Domain.Data;
using kp.Resources;
using System.Linq;

UserControl "kp.Views.Clients.ClientsView" 
{
	EntitiesView 
	{
		Columns: 
		[
			DataGridTextColumn
			{
				Header: Texts.Identificator
				Binding: bind Id
			}	
			DataGridTextColumn
			{
				Header: Texts.Name
				Binding: bind convert (Client client) => 
					client.FirstName + " " + client.LastName
			}
		]
	}
}